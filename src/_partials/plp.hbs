<main>
    <h1 class="sr-only">Product listing Page</h1>
    <div class="col-12  product-section-wrapper">
    {{> _partials/dropdown }}
    <div class="product-grid row">
        {{#each this.products}}
            <div class="col-12 col-md-6 col-lg-3 product-section-block">
                 <h2>{{this.name}}</h2>
                <div class="product-section">
                    <div class="product-section-image">
                    <a href="#">
                        <img src="{{this.imageURL}}" alt="{{this.name}}">
                    </a>
                </div>
                <div class="product-details">
                    <div class="product-description">
                        {{this.description}}
                    </div>
                    <button class="btn btn-danger buy-button-mobile">Buy Now @MRP Rs{{this.price}}</button>
                </div>
                <div class="product-button-desktop">
                    <span>@MRP {{this.price}}</span>
                    <button class="btn btn-danger">Buy Now</button>
                </div>
            </div>
                
            </div>
        {{/each}}
    </div>
    </div>
</main>